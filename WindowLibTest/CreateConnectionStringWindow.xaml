<Window x:Class="WindowLibTest.CreateConnectionStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowLibTest"
        mc:Ignorable="d"
        Title="CreateConnectionString" Height="256" Width="512">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Text="Перед работой с приложением необходимо создать строку подключения (PostgreSQL)!"/>
        <StackPanel Margin="4" Orientation="Horizontal">
            <TextBlock Text="Connection string:"/>
            <TextBox Name="ConnectionString" Width="365" />
        </StackPanel>
        <StackPanel Margin="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0, 4, 32, 0" Width="128" Content="Create" Click="CreateConnectionString_Click"/>
            <Button Margin="0, 4, 32, 0" Width="128" Content="Close" Click="Close_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
